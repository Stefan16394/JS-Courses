{{> header}} 
{{> navigation}}
<div class="content">
<section id="viewMyPosts">
    <div class="post post-content">
        <h1>Your Posts</h1>
    </div>
     
       <article class="post">
    
  {{#each posts}}
        <div class="col rank">
            <span>{{rank}}</span>
        </div>
        <div class="col thumbnail">
            <a href={{url}}>
                <img src={{imageUrl}}>
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href={{url}}>
                    {{title}}
                </a>
            </div>
            <div class="details">
                <div class="info">
                    submitted {{date}} ago by {{author}}
                </div>
        <div class="controls">
                    <ul>
                        <li class="action">
                            <a class="commentsLink" href="#/details/{{_id}}">comments</a>
                        </li>
                        {{#if isAuthor}}
                        <li class="action">
                            <a class="editLink" href="#/details/edit/{{_id}}">edit</a>
                        </li>
                        <li class="action">
                            <a class="deleteLink" href="#/details/delete/{{_id}}">delete</a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
        {{else}}
        <p>You have no posts.</p>
         {{/each}}
    </article>
</section>
</div>
{{> footer}}