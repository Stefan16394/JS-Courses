{{> header}}
{{> navigation}}
<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href={{post.url}}
                <img src={{post.imageUrl}}>
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href={{post.url}}>
                    {{post.title}}
                </a>
            </div>
            <div class="details">
                {{#if post.description}}
                <p>{{post.description}}</p>
                {{else}}
                <p>No description.</p>
                {{/if}}
                <div class="info">
                    submitted {{post.date}} ago by pesho
                </div>
                <div class="controls">
                    <ul>
                         {{#if isAuthor}}
                        <li class="action"><a class="editLink" href="#/details/edit/{{post._id}}">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/details/delete/{{post._id}}">delete</a></li>
                         {{/if}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/comments/create/{{post._id}}" method="POST">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comments}}
    <article class="post post-content">
        <p>{{text}}</p>
        <div class="info">
            submitted {{date}} ago by {{name}} | 
            {{#if isAuthor}}
            <a href="#/comments/delete/{{_id}}" class="deleteLink">delete</a>
            {{/if}}
        </div>
    </article>
    {{/each}}
   
</section>
{{> footer}}